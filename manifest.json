{
  "manifest_version": 3,
  "name": "WebRice",
  "version": "1.0",

  "description": "Text to speech service for icelandic",

  "permissions": ["tabs", "activeTab", "webRequest"],

  "action": {
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.is/*"],
      "js": [
        "constants/constants.js",
        "content/audioplayer.js",
        "content/fetch.js",
        "content/content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
